    StandVertBoxLayout:
        do_default_tab: False
        size: root.size
        pos: root.pos
        canvas:
            Color:
                rgba:1,1,1,0
            Rectangle:
                pos: self.pos
                size: self.size
        TabbedPanel:
            do_default_tab: False
            size_hint:1,0.9
            TabbedPanelItem:
                text: 'Login'
                LoginPage:
                    id:loginPage
            TabbedPanelItem:
                text: 'Patient'
                DataPage:
                    id:dataPage
            TabbedPanelItem:
                text:'Visit'
                ProcDiagIntPage:
                    id:procDiagIntPage
        BoxLayout:
            orientation: 'horizontal'
            size_hint:1,0.10
            canvas:
                Color:
                    rgba:1,1,1,0.1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                size_hint:0.2,1
                text:"Uživatel přihlašen jako:"
            Label:
                id:doctorName
                size_hint:0.1,1
                text:"Neni prihlašen"
            Label:
                size_hint:0.7,1
                text:""

